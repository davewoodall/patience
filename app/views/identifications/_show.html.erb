<% if @identification %>
<h1 class="title">State ID</h1>
<div class="image_upload">
  <% if @identification_image.attached? %>
    <%= image_tag @identification_image, width: 200 %>
  <% else %>
    <%= link_to 'add identifcation image', edit_identification_user_path %>
  <% end %>
</div>

<p>
  <strong>Number:</strong>
  <%= @identification.number %>
</p>

<p>
  <strong>State:</strong>
  <%= @identification.state %>
</p>

<p>
  <strong>Expiration:</strong>
  <%= @identification.expiration %>
</p>
<div class="has-text-right">
  <%= link_to "Edit", edit_identification_user_path, class: 'button' %>
</div>
<% else %>
<div class="has-text-right">
  <%= link_to "Add State identification", new_identification_user_path, class: 'button' %>
</div>
<% end %>