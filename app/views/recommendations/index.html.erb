<p id="notice"><%= notice %></p>

<h1>Recommendations</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Number</th>
      <th>Issuer</th>
      <th>State</th>
      <th>Expiration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recommendations.each do |recommendation| %>
      <tr>
        <td><%= recommendation.user.name %></td>
        <td><%= recommendation.number %></td>
        <td><%= recommendation.issuer %></td>
        <td><%= recommendation.state %></td>
        <td><%= recommendation.expiration %></td>
        <td><%= link_to 'Show', user_recommendation_path(recommendation.user, recommendation.id) %></td>
        <td><%= link_to 'Edit', edit_user_recommendation_path(recommendation.user, recommendation.id) %></td>
        <td><%= link_to 'Destroy', user_recommendation_path(recommendation.user, recommendation.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recommendation', new_user_recommendation_path %>
