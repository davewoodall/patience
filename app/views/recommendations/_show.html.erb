<% if @recommendation %>
<h1 class="title">Medical Recommendation</h1>
<div class="image_upload">
  <% if @recommendation_image.attached? %>
    <%= image_tag @recommendation_image, width: 200 %>
  <% else %>
    <%= link_to 'add recommendation image', edit_recommendation_user_path %>
  <% end %>
</div>

<p>
  <strong>Number:</strong>
  <%= @recommendation.number %>
</p>

<p>
  <strong>Issuer:</strong>
  <%= @recommendation.issuer %>
</p>

<p>
  <strong>State:</strong>
  <%= @recommendation.state %>
</p>

<p>
  <strong>Expiration:</strong>
  <%= @recommendation.expiration %>
</p>
<div class="has-text-right">
  <%= link_to "Edit", edit_recommendation_user_path, class: 'button' %>
</div>
<% else %>
<div class="has-text-right">
  <%= link_to "Add Recommendation", new_recommendation_user_path, class: 'button' %>
</div>
<% end %>
