<div class="field">
  <% if action_name == 'edit' %>
    <%= link_to 'Cancel', user, class: 'button is-warning' %>
    <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger' %>
  <% else %>
    <%= link_to 'Cancel', users_path, class: 'button is-warning' %>
  <% end %>
  <%= form.submit 'Save', class:'button is-primary' %>
</div>